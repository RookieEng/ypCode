.container {
  padding: 20rpx;
  color: #666;
  font-size: 28rpx;
}
.movies{
  display: flex;
  flex-direction: row;
  margin-bottom: 0;
}
.r_top{
  width: 710rpx;
  display: block;
  font-size: 40rpx;
}
.dybox view{
  width: 620rpx;
}
.dybox view:first-of-type{
  width: 90rpx;
}
.dybox view navigator{
  display: inline-block;
}
.plays{
  display: inline-block;
  margin-right: 8rpx;
}
.pl .top{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}
.pl .top view{
  width: 616rpx;
  font-style: italic;
  color: #999;
}
.cont{
  border:1px solid #ddd;
  background-color: #fcfcfc;
  font-size: 22rpx;
  color:#777;
  padding: 10rpx;
  margin: 10rpx 0;
}
.tit{
  font-size: 25rpx;
  color: #666;
  margin: 5rpx 0;
}
.v{
  width: 710rpx;
  position: absolute;
  top:40rpx;
  left: 20rpx;
}